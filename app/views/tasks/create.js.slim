- if @task.errors.any?
 |
  $("#error_messages").html('#{ j render "shared/error_messages", object: @task }');
  $(".modal").animate({ scrollTop : 0 }, 500);
- else
 |
  $('.calendar').fullCalendar( 'renderEvent',
    $.parseJSON("#{ j render( "shared/tasks/task", task: @task, format: :json).html_safe }"), true );
  $('.modal').modal('hide');
  toastr.success("#{t(".create_task")}")

