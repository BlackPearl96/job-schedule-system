tr id="working#{working.id}"
  td
    = working.user.id
  td
    = working.user.username
  td
    = working.user.email
  td
    = working.checkin.localtime.strftime("%d/%m/%Y %T")
  td
    - if working.checkout.localtime == working.updated_at.localtime
      = working.checkout.localtime.strftime("%d/%m/%Y %T")
    - else
      = t ".no_checkout"
  td
    - if working.content.present?
        .badge.badge-danger
          = working.content
    - else
        .badge.badge-success
          = t ".work_on"
  td
    - if working.checkout.localtime == working.updated_at.localtime
        .badge.badge-success
          = t ".done"
    - else
        .badge.badge-warning
          = t ".working"
